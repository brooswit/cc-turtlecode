while true do
  turtle.digDown()
  turtle.digUp()
  turtle.dig()
  
  turtle.suckDown()
  turtle.suckUp()
  turtle.suck()
  
  if turtle.getFuelLevel() < turtle.getFuelLimit() then
    local slot = turtle.getSelectedSlot() + 1
    if slot > 16 then
      slot = 0
    end
    turtle.select(slot)

    if not turtle.refuel(1) then
      turtle.drop()
    end
  end
  
  turtle.forward()
end
